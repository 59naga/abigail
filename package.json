{
  "name": "abigail",
  "bin" : "abigail",
  "main": "abigail",
  "description": "Minimal task runner",
  "version": "0.0.2",

  "scripts": {
    "start": "node ./ *.coffee:compile",
    "build": "coffee -p test/viaAvigail.coffee",
    "compile": "coffee -pb test/viaAvigail.coffee",

    "test": "jasminetea . --verbose --cover --repot --timeout 3000"
  },

