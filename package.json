{
  "name": "abigail",
  "description": "lightweight, pluggable, a minimal task runner. using your npm-scripts.",
  "version": "1.3.5",
  "main": "lib",
  "files": [
    "lib",
    "abby"
  ],
  "bin": {
    "abby": "abby"
  },
  "scripts": {
    "test": "mocha --compilers js:babel-register",
    "lint": "eslint src test abby",
    "cover": "npm-run-all cover:*",
    "cover:test": "nyc --reporter=lcov --reporter=text npm test",
    "cover:report": "node -e \"if(process.env.TRAVIS){}else{process.exit(1)}\" && codeclimate-test-reporter < coverage/lcov.info || echo skip coverage report",
    "build": "cross-env NODE_ENV=production rollup -c",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "dependencies": {
    "abigail-plugin": "^0.1.3",
    "abigail-plugin-exit": "^0.1.1",
    "abigail-plugin-launch": "^0.0.6",
    "abigail-plugin-log": "^0.1.1",
    "abigail-plugin-parse": "^0.1.0",
    "abigail-plugin-watch": "^0.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.2",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-espower": "^2.1.2",
    "babel-plugin-transform-object-assign": "^6.5.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.7.2",
    "carrack": "^0.1.0",
    "chopsticks": "^0.0.0",
    "climb-lookup": "^1.0.0",
    "codeclimate-test-reporter": "^0.3.1",
    "conventional-changelog-cli": "^1.1.1",
    "cross-env": "^1.0.7",
    "deep-assign": "^2.0.0",
    "eslint": "^2.6.0",
    "eslint-config-airbnb": "^6.2.0",
    "lodash.flattendeep": "^4.1.0",
    "mocha": "^2.4.5",
    "npm-path": "^1.1.0",
    "npm-run-all": "^1.5.3",
    "nyc": "^6.1.1",
    "pascal-case": "^1.1.2",
    "power-assert": "^1.3.1",
    "rollup": "^0.25.8",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-commonjs": "^2.2.1",
    "rollup-plugin-json": "^2.0.0",
    "rollup-plugin-npm": "^1.4.0",
    "rollup-plugin-uglify": "^0.3.1",
    "sinon": "^1.17.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abigailjs/abigail.git"
  },
  "keywords": [
    "abigail",
    "npm-scripts",
    "task",
    "watch"
  ],
  "author": "59naga <i59naga@icloud.com> (http://berabou.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abigailjs/abigail/issues"
  },
  "homepage": "https://github.com/abigailjs/abigail#readme"
}
