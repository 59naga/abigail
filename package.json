{
  "name": "abigail",
  "bin" : "abigail",
  "description": "the Minimal task runner. Enhance your npm-scripts.",
  "version": "0.1.0-beta.1",

  "scripts": {
    "default": "jasminetea test --verbose --timeout 3000",

    "start": "$(opc package scripts.default) --watch",
    "test": "$(opc package scripts.default) --cover --report",
    
    "prepublish": "node -e \"if(process.env.TRAVIS){}else{process.exit(1)}\" && npm run compile || echo skip prepublish",
    "compile": "coffee --bare --compile index.coffee",
    "postcompile": "coffee --output lib --bare --compile src"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    }
  },

  "dependencies": {
    "bluebird": "^2.9.27",
    "chalk": "^1.0.0",
    "gaze": "^0.5.1",
    "minimist": "^1.1.0"
  },
  "devDependencies": {
    "ghooks": "^0.3.2",
    "jasminetea": "^0.2.0-beta.7",
    "object-parser-cli": "0.0.1-alpha.0"
  },
  
  "keywords": [
    "npm-scripts",
    "cli",
    "watch"
  ],
  
  "author": "59naga <i59naga@icloud.com> (http://berabou.me)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/59naga/abigail.git"
  },
  "bugs": {
    "url": "https://github.com/59naga/abigail/issues"
  },
  "homepage": "https://github.com/59naga/abigail"
}
